# Test Environment Configuration
# Copy this file to .env.test.local and update with your actual test credentials

# Application URL
BASE_URL=http://localhost:3000

# Test User Credentials
TEST_EMAIL=test@example.com
TEST_PASSWORD=testpassword123

# Test Configuration
NODE_ENV=test

# Database (if needed for test setup)
# DATABASE_URL=your_test_database_url

# API Keys (if needed for testing)
# API_KEY=your_test_api_key

# Other test-specific configurations
PLAYWRIGHT_HEADLESS=false
PLAYWRIGHT_TIMEOUT=30000

# Browser Configuration
PLAYWRIGHT_BROWSER=chromium

# Test Data
TEST_COMPANY_NAME=Tesla
TEST_COMPANY_URL=https://tesla.com
TEST_COMPETITORS=Ford,BMW,Mercedes,Audi

# Feature Flags for Testing
ENABLE_BRAND_MONITOR_TESTS=true
ENABLE_DASHBOARD_TESTS=true
ENABLE_CHAT_TESTS=true

# Debugging
DEBUG_MODE=false
VERBOSE_LOGGING=false